<section class="columns is-justify-content-center">
    <div class="column">
        <a href="/dashboard"> &larr; Back to dashboard</a>
        <!-- EDIT POST -->
        <div class="card m-4">
            <div class="card-header has-background-primary">
                <p class="has-text-white is-size-5 p-3"><b>Edit Post</b></p>
            </div>
            <div class="card-content">
                <form class="edit-post-form">
                    <div class="field">
                        <input class="input" name="post-title" type="text" value="{{post.title}}" />
                    </div>
                    <div class="field">
                        <div class="control">
                            <textarea class="textarea" name="post-content">{{post.post_content}}</textarea>
                        </div>
                        <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
                    </div>
                    <button class="button is-primary is-fullwidth m-2" type="submit">Save Post</button>
                    <button class="button is-danger is-fullwidth delete-post-btn m-2">Delete Post</button>
                </form>
            </div>
        </div>
        <!-- ADD A COMMENT -->
        <article class="card m-4">
            <div class="card-header has-background-primary">
                <p class="card-header-title has-text-light is-size-5">
                    Add a Comment:
                </p>
            </div>
            <div class="card-content">
                <form class="comment-form">
                    <div class="field">
                        <textarea class="textarea" name="comment-body"></textarea>
                    </div>
                    <div class="field">
                        <button class="button is-primary" type="submit">Add Comment</button>
                    </div>
                </form>
            </div>
        </article>
        {{> comments post.comments}}
    </div>
</section>

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>
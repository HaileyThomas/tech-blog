<div class="columns is-justify-content-center">
    <!-- LOGIN FORM -->
    <div class="column is-two-fifths">
        <div class="card m-3">
            <div class="card-header has-background-primary">
                <p class="has-text-white is-size-5 p-3"><b>Log In</b></p>
            </div>
            <div class="card-content">
                <form class="login-form">
                    <div class="field">
                        <label class="label" for="email-login">Email:</label>
                        <input class="input" type="text" id="email-login" />
                    </div>
                    <div class="field">
                        <label class="label" for="password-login">Password:</label>
                        <input class="input" type="password" id="password-login" />
                    </div>
                    <div class="field">
                        <button class="button is-primary" type="submit"><b>log in</b></button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- SIGN UP FORM -->
    <div class="column is-two-fifths">
        <div class="card m-3">
            <div class="card-header has-background-primary">
                <p class="has-text-light is-size-5 p-3"><b>Sign Up</b></p>
            </div>
            <div class="card-content">
                <form class="signup-form">
                    <div class="field">
                        <label class="label" for="username-signup">Username:</label>
                        <input class="input" type="text" id="username-signup" />
                    </div>
                    <div class="field">
                        <label class="label" for="email-signup">Email:</label>
                        <input class="input" type="text" id="email-signup" />
                    </div>
                    <div class="field">
                        <label class="label" for="password-signup">Password:</label>
                        <input class="input" type="password" id="password-signup" />
                    </div>
                    <div class="field">
                        <button class="button is-primary" type="submit"><b>sign up</b></button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script src="/javascript/login.js"></script>
